<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@drawable/gradient" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lobster"
        android:layout_marginTop="12dp"
        android:text="Registration"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/newpass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="New Login"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newpass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:ems="10"
        android:hint="Retry Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnin"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/rounded_button"
        android:text="Sign In"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/newlog"
        android:layout_marginEnd="-9dp"
        android:layout_marginTop="1dp"
        android:layout_toStartOf="@+id/textView2"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/newpass1"
        android:layout_toStartOf="@+id/newpass1"
        app:srcCompat="@android:drawable/ic_partial_secure" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/newpass2"
        android:layout_toStartOf="@+id/newpass1"
        app:srcCompat="@android:drawable/ic_partial_secure" />

    <EditText
        android:id="@+id/gmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:ems="10"
        android:hint="Your Mail"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/gmail"
        android:layout_toStartOf="@+id/newpass1"
        app:srcCompat="@android:drawable/ic_dialog_email" />
</RelativeLayout>